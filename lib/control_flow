## Pause the execution of the script and wait for user input. This is primarily
## used in select prompts where invalid values should be retried
##
pause_function()
{
    if [[ $# -gt 0 ]]; then
        print_line
        printf "%s\n" "$1"
    fi

    print_line
    read -r -e -sn 1 -p "Press enter to continue..."
    printf "\033[1A\r\033[K\033[1A\r\033[K"
}

## Notify the user that an invalid option has been selected and pause the
## function to redisplay the selection menu
##
invalid_option()
{
    pause_function "Invalid option. Try again"
}
