## Set the system locale and keyboard layout settings for both the virtual console and Xorg using
## the localectl tool
##
## https://wiki.archlinux.org/index.php/keymap
##
select_keymap()
{
  local title
  local info
  local keymap_list

  title="KEYMAP - Keyboard Configuration"
  info="Set the system locale and keyboard layout settings for both the virtual console and Xorg using the localectl tool"

  keymap_list=( $(localectl list-keymaps | tr '\n' ' ') )

  print_title "${title}"
  print_info "${info}"

  PS3="${SELECTION_PROMPT}"

  set_columns

  select KEYMAP in "${keymap_list[@]}"; do
    if contains_element keymap_list "${KEYMAP}"; then
      localectl set-keymap --no-convert "${KEYMAP}"
      break
    else
      invalid_option
      print_title "${title}"
      print_info "${info}"
    fi
  done
}
