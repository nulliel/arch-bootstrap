## Set the default system editor
##
select_editor()
{
  local title
  local info
  local editor_list

  title="EDITOR - Editor Configuration"
  info="Set the default system editor"

  editor_list=("vi" "vim" "nano")

  print_title "${title}"
  print_info "${info}"

  PS3="${SELECTION_PROMPT}"

  set_columns

  select EDITOR in "${editor_list[@]}"; do
    if contains_element editor_list "${EDITOR}"; then
      break
    else
      invalid_option
      print_title "${title}"
      print_info "${info}"
    fi
  done
}
